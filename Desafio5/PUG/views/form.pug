extends index.pug 

block content
            div(class="jumbotron")
                form(action="/api/productos" method="POST")
                    div(class="row mb-3")
                        label(for="inputEmail3" class="col-sm-2 col-form-label")="Nombre Prod"
                            div(class="col-sm-10")
                                input(name="product" class="form-control" )
                    div(class="row mb-3")
                        label(class="col-sm-2 col-form-label")="Precio"
                            div(class="col-sm-10")
                                input(name="price" class="form-control" )
                    div(class="row mb-3")
                        label(for="inputEmail3" class="col-sm-2 col-form-label")="Imagen"
                            div(class="col-sm-10")
                                input(name="thumbnail" class="form-control")
                    input(type="submit")
