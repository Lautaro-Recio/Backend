extends index.pug 

block content
  h1=bienvenidos
          <hr>
            table(class="table")
              thead
                tr
                  th(scope="col")="#"
                  th(scope="col")="Producto" 
                  th(scope="col")="Precio"
                  th(scope="col")="Imagen"
                tbody
                
                  - const productos=products
                  each n in productos
                    tr
                        td=n.id
                        th=n.product
                        td=n.price
                        td
                            img(style="height:50px; width:50px" src=n.thumbnail)
                  else 
                    h1="No hay productos"
                    hr

